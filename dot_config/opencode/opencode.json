{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "google/gemini-3-flash-preview",
  "theme": "gruvbox",
  "plugin": [
    "opencode-gemini-auth@1.3.7",
    "opencode-websearch-cited@1.1.1",
    "@mohak34/opencode-notifier@0.1.10",
  ],
  "permission": {
    "bash": {
      "*": "ask",
      "rg *": "allow",
      "grep *": "allow",
      "fd *": "allow",
      "find *": "allow",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "pwd *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "mkdir *": "allow"
    }
  },
  "mcp": {
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false
    }
  },
  "lsp": {
    "csharp": {
      "command": ["csharp-ls"],
      "extensions": [".cs"]
    }
  },
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-5"
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "ask": {
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.3
    }
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-opus-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 20000,
            },
          },
        },
      },
    },
    "google": {
      "options": {
        "websearch_cited": {
          "model": "gemini-2.5-flash"
        }
      }
    }
  }
}