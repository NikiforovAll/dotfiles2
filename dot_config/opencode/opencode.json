{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "model": "anthropic/claude-opus-4-5",
  "small_model": "google/gemini-3-flash-preview",
  "theme": "gruvbox",
  "plugin": [
    "opencode-gemini-auth@latest"
  ],
  "permission": {
    "bash": {
      "rg": "allow",
      "grep": "allow",
      "fd": "allow",
      "find": "allow",
      "git status": "allow",
      "git diff": "allow",
      "ls": "allow",
      "cat": "allow",
      "pwd": "allow",
      "mkdir": "allow",
      "*": "ask"
    }
  },
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-5",
    },
    "build": {
      "model": "google/gemini-3-pro-preview"
    }
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-opus-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 20000,
            },
          },
        },
      },
    },
  }
}